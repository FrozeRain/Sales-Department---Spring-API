<html>
<head>
    <title>Sales Department</title>
    <style>
        table {
            width: 50%; /* Ширина таблицы */
            border-collapse: collapse;
            border: 1px solid gray;
        }

        td {
            padding: 5px; /* Поля в ячейках */
            vertical-align: top; /* Выравнивание по верхнему краю ячеек */
            horiz-align: center;
            text-align: center;
        }

        th {
            border-collapse: collapse;
            border: 1px solid gray;
        }
    </style>
</head>
<body>

<h1>Order Filter by Name/Company</h1>
<a href="/main">Back</a>
<form action="/orderFilter" method="get">
    <input type="text" name="key" placeholder="Search"/>
    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
    <button type="submit">Search</button>
</form>
<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name/Company
        </th>
        <th>
            Date
        </th>
        <th>
            Price
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>
    {{#orders}}
    <tr>
        <td>{{id}}</td>
        <td>{{ClientFullName}}</td>
        <td>{{date}}</td>
        <td>{{price}}</td>
        <td>
            <form method="post" action="/orderUpdate">
                <button style="background-color: cornflowerblue; border: cadetblue" type="submit" name="update"
                        value="{{id}}">Edit
                </button>
                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            </form>
        </td>
        <td>
            <form method="post" action="/orderDelete">
                <button style="background-color: red; border: brown" type="submit" name="delete" value="{{id}}">X
                </button>
                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            </form>
        </td>
    </tr>
    {{/orders}}
</table>

</body>
</html>